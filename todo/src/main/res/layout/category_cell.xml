<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/layout_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="@string/name_category"
            android:textSize="25sp" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_below="@+id/nameCategory" />

        <TextView
            android:id="@+id/count_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_below="@+id/space"/>

        <ImageButton
            android:id="@+id/buttonEditCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameCategory"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:backgroundTint="@color/blue_edit"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/buttonDeleteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameCategory"
            android:layout_toLeftOf="@+id/buttonEditCategory"
            android:backgroundTint="@color/red_delete"
            android:src="@android:drawable/ic_menu_delete" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>